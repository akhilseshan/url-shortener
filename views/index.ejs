<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>

<body>
    <div class="container">
        <h1>URL Shortener</h1>
        <br>
        <form class="form-inline" action="/urlshortener" method="POST">
            <input class="form-control" placeholder="URL" type="url" name="fullURL" id="fullURL" required />
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>
    </div>
    <br>

    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">
                        Full URL
                    </th>
                    <th scope="col">
                        Short URL
                    </th>
                    <th scope="col">
                        Creation Time
                    </th>
                    <th scope="col">
                        Clicks
                    </th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortUrl => { %>
                    <tr>
                        <td>
                            <a href="<%= shortUrl.fullURL %>">
                                <%= shortUrl.fullURL %>
                            </a>
                        </td>
                        <td>
                            <a href="<%= shortUrl.shortURL %>">
                                <%= shortUrl.shortURL %>
                            </a>
                        </td>
                        <td>
                            <%= shortUrl.creationTime %>
                        </td>
                        <td>
                            <a href="/display/graph/<%= shortUrl.shortURL%>">
                                <%= shortUrl.clicks %>
                            </a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
</body>

</html>